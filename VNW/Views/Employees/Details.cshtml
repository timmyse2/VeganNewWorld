@model VNW.Models.Employee

@{
    ViewData["Title"] = "員工個人資料";
}

<h2>@ViewData["Title"]</h2>

@if(false)
{
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Extension)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Extension)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhotoPath)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReportsTo)
        </dt>
        <dd>
            <ul>
                <li>
                    @*@Html.DisplayFor(model => model.ReportsTo)*@
                    @if (Model.ReportsToNavigation != null)
                    {
                        @Model.ReportsToNavigation.Name
                        <span>(@Model.ReportsToNavigation.Email)</span>
                    }
                </li>
            </ul>            
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InverseReportsToNavigation)
        </dt>
        <dd>
            @if (Model.InverseReportsToNavigation != null)
            {
                foreach (var e in Model.InverseReportsToNavigation)
                {
                    <ul>
                        <li>@e.Name <a>(@e.Email)</a> </li>
                    </ul>
                }
            }
        </dd>
    </dl>
</div>
}

<p></p>
<div class="row">
    <div class="col-md-4">        
        <table class="table table-hover table-striped">
            <tr>
                <td>
                    <b>ID</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Id)
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Email)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Name)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Title)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Extension)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Extension)
                </td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.PhotoPath)</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.PhotoPath)
                </td>
            </tr>

            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.ReportsTo)</b>
                </td>
                <td>
                    @*@Html.DisplayFor(model => model.ReportsTo)*@
                    @if (Model.ReportsToNavigation != null)
                    {
                        @Model.ReportsToNavigation.Name
                        <span>(@Model.ReportsToNavigation.Email)</span>
                    }
                </td>
            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.InverseReportsToNavigation)</b>
                </td>
                <td>
                    @if (Model.InverseReportsToNavigation != null)
                    {
                        foreach (var e in Model.InverseReportsToNavigation)
                        {

                            @e.Name <a>(@e.Email)</a><br />

                        }
                    }
                </td>
            </tr>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
    @if (ViewBag.ShopAccount == Model.Email)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    }
</div>
