@model VNW.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="RowVersion" />
            @*<input asp-for="RowVersion" readonly/>*@
            <div class="form-group">
                <label class="control-label">Row Version</label>
                <input class="form-control" value="@Convert.ToBase64String(Model.RowVersion)" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">訂單ID</label>
                <input class="form-control" value="@Model.OrderId" readonly />
            </div>
            <div class="form-group">
                @*<label asp-for="ProductId" class="control-label"></label>*@
                <label class="control-label">產品ID</label>
                <input class="form-control" value="@Model.ProductId" readonly />
                @if (Model.Product != null)
                {
                    @Model.Product.ProductName
                }

            </div>

            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

