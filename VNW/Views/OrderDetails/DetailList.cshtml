@model IEnumerable<VNW.Models.OrderDetail>

@{
    ViewData["Title"] = "Detail List";
}

<h2>訂單細節</h2>

<p>
    User ID: @ViewBag.UserAccount
    @*[@ViewBag.UserAccount]
        [@ViewBag.UserLevel]*@
</p>

<div class="alert-danger">
    <b>@TempData["td_serverMessage"]</b>
</div>

<a asp-action="OrderList" asp-controller="orders">訂單總表</a>

@if (@Model == null)
{
    return;
}

<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Order)**@
                Order ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)*
            </th>

            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @*#@Html.DisplayFor(modelItem => item.Order.OrderId)*@
                    @*@item.Order.Customer.ContactName*@
                    @item.OrderId
                    @if (item.Order != null)
                    {
                        @item.Order.CustomerId
                        @*@item.Order.OrderId*@
                    }

                </td>
                <td>
                    @*#@Html.DisplayFor(modelItem => item.Product.ProductId)*@
                    @item.Product.ProductName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>

                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { pid = item.ProductId, oid = item.OrderId }) |
                        @Html.ActionLink("Details", "Details", new { pid = item.ProductId, oid = item.OrderId })*@
                    @*@Html.ActionLink("Delete", "Delete", new { pid = item.ProductId, oid = item.OrderId })*@

                    <a class="btn btn-danger">取消</a>
                </td>
            </tr>
        }
    </tbody>
</table>
