@model IEnumerable<VNW.Models.OrderDetail>

@{
    ViewData["Title"] = "訂單細節";
    decimal totalPriceSum = 0;
    VNW.Models.Order OrderInfo = null;
}

<h2>@ViewData["Title"]</h2>

<p>
    @*User ID: @ViewBag.UserAccount*@
    @*[@ViewBag.UserAccount]
        [@ViewBag.UserLevel]*@

</p>

<div class="alert-danger">
    <b>@TempData["td_serverMessage"]</b>
</div>

<a asp-action="OrderList" asp-controller="orders">訂單總表</a>

@if (@Model == null)
{
    return;
}


@if (ViewData["preCheckOrder"] == null)
{

}
else
{
    OrderInfo = (VNW.Models.Order)ViewData["preCheckOrder"];
    <h4>訂單資訊</h4>

    <table class="table">
        <tr><td>訂單編號</td><td><b>@OrderInfo.OrderId</b></td></tr>
        <tr><td>客戶帳號</td><td>@OrderInfo.CustomerId</td></tr>
        <tr><td>訂貨日期</td><td>@OrderInfo.OrderDate</td></tr>
        <tr><td>出貨地標(公司|組織)</td><td>@OrderInfo.ShipName</td></tr>
        <tr><td>出貨時間</td><td>@OrderInfo.ShippedDate</td></tr>
        <tr><td>出貨地址</td><td>@OrderInfo.ShipAddress</td></tr>
        <tr><td>送貨方式</td><td>@OrderInfo.ShipVia</td></tr>
        <tr><td>運費</td><td>@OrderInfo.Freight</td></tr>
    </table>
}

<h4>訂單內容</h4>
<table class="table">
    <thead>
        <tr>
            <th>商品</th>
            <th>名稱</th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>

            <th>小記</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Product != null)
                    {
                        <img src="~/images/@item.Product.Picture" style="width:80px; " />
                    }
                </td>
                <td>
                    @item.Product.ProductName
                    @*#@Html.DisplayFor(modelItem => item.Product.ProductId)*@
                    @*@item.OrderId
                    (@item.ProductId)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                @{
                    decimal PriceByQty = item.UnitPrice * item.Quantity;
                    totalPriceSum += PriceByQty;
                }
                <td>
                    @PriceByQty
                </td>
            </tr>
        }
    </tbody>
</table>


<h3 style="text-align:right;">總計: NT$ @totalPriceSum </h3>
