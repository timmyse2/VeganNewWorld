@model IEnumerable<VNW.Models.Category>

@{
    ViewData["Title"] = "商品分類";
}


<p>
    <a asp-action="Index" asp-controller="Home">首頁</a>
    > 商品分類 
</p>

<table class="table">
    <thead>
            <tr>
                <th>
                    分類
                </th>
                <th>
                    數量
                </th>
                <th>簡介</th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="ProductList" asp-controller="Products"
                       asp-route-cat="@item.CategoryId"
                       asp-route-catName="@item.CategoryName">
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </a>
                </td>

                <td>
                    @item.CatCount
                    @*@if (item.Products != null)
                    {
                        @item.Products.Count()
                    }
                    else
                    {
                        <b>null</b>
                    }*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


                @*<td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>

<div>
    <form asp-action="ProductList" asp-controller="products">
        <h4>用關鍵字找商品(可輸入1~20個字) </h4>
        @*<div class="btn btn-primary" id="btn_search">查詢</div>*@
        <table>
            <tr>
                <td><input id="input_search" name="search" class="form-control" style="" value="@ViewBag.searchKey" /></td>
                <td><input type="submit" value="查詢" class="btn btn-primary" /></td>
            </tr>
        </table>
    </form>
</div>
